    "test:perf": "npm run build && (npm run preview -- --host 127.0.0.1 --port 4173 >/dev/null 2>&1 & preview_pid=$!; npx lighthouse http://127.0.0.1:4173 --preset=desktop --output=json --output-path=./lighthouse-report.json --quiet --chrome-flags='--headless=new' && kill $preview_pid)"
  },
  "dependencies": {
