{
  "name": "temp-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run src/domain/usecases/getDailyFortune.test.ts src/data/repositories/LocalFortuneRepository.test.ts src/data/services/GeminiClient.test.ts src/data/firebase/firebaseConfig.test.ts",
